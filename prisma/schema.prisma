generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cart {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Order {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  image       String
  price       BigInt
  quantity    BigInt
  rating      BigInt
  title       String
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
