generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  order Order[]
}

model Order {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  image       String
  price       Int
  quantity    Int
  rating      Int
  title       String
  userId String @db.ObjectId
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Cart {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
