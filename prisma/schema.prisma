// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

  // prisma/schema.prisma

 model User {
  id        Int      @id  @map("_id")
  email     String   @unique
  username  String?
  cart      Cart[]
  payments  Payment[]
}

model Cart {
  id       Int     @id  @map("_id")
  user     User    @relation(fields: [userId], references: [id])
  userId   Int @unique
  items    CartItem[]
}

model Payment {
  id        Int      @id  @map("_id")
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  amount    Float
  createdAt DateTime @default(now())
}

model CartItem {
  id       Int   @id  @map("_id")
  cart     Cart  @relation(fields: [cartId], references: [id])
  cartId   Int
  product  Product   @relation(fields: [productId], references: [id])
  productId String
  quantity Int
}


  model Product {
    id        String   @id @default(cuid()) @map("_id")
    title     String   
    category  String   
    description String
    image     String   
    price     Float    
    rating    Float
    quantity  Int  
    cartItems CartItem[]  
  }