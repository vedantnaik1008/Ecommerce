generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  category String
  description String
  image String
  price Int
  rating Int
  quantity Int
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  title String
  category String
  description String
  image String
  price Int
  rating Int
  quantity Int
}

model Cart {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  category String
  description String
  image String
  price Int
  rating Int
  quantity Int
}
