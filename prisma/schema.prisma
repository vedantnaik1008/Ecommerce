generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {

  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  image       String
  price       Int
  rating      Int
  title       String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  @@map("products")
}



model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
  @@map("users")
}

